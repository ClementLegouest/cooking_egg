<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La cuisson des oeufs pour Domitille"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Oeufs durs"
        android:id="@+id/hard_egg_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Oeufs mollets"
        android:id="@+id/poched_egg_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/hard_egg_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Oeufs pochés"
        android:id="@+id/poached_egg_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/poched_egg_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Oeufs à la coque"
        android:id="@+id/boiled_egg_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/poached_egg_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10:00"
        android:textSize="50sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/boiled_egg_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/countdown_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>